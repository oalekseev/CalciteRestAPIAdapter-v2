<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Detailed logging for REST requests/responses -->
    <logger name="org.apache.calcite.adapter.restapi.rest.RestTable" level="DEBUG"/>

    <!-- Enable logs for REST requests/responses and selection results -->
    <logger name="org.apache.calcite.adapter.restapi.rest.RestDataEnumerator" level="DEBUG"/>

    <!-- Optional: log Apache HTTP client details -->
    <logger name="org.apache.hc.client5" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
